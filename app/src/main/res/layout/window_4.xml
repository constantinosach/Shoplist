<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff">


    <TextView
        android:layout_width="191dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_above="@android:id/list"
        android:layout_gravity="right"
        android:paddingTop="15dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:background="#ffffff"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:paddingRight="16dp"
        android:paddingLeft="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Qty"
            android:id="@+id/textViewWindow4"
            android:textColor="#000000"
            android:padding="5dp"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@android:id/list"
            android:layout_alignStart="@android:id/list" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Item Name"
            android:id="@+id/textView2Window4"
            android:textColor="#000000"
            android:padding="5dp"
            android:layout_above="@android:id/list"
            android:layout_toRightOf="@+id/textViewWindow4"
            android:layout_toEndOf="@+id/textViewWindow4"
            android:layout_marginLeft="38dp"
            android:layout_marginStart="38dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Price"
            android:id="@+id/textView3Window4"
            android:textColor="#000000"
            android:padding="5dp"
            android:layout_marginLeft="41dp"
            android:layout_marginStart="41dp"
            android:layout_above="@android:id/list"
            android:layout_toRightOf="@+id/textView2Window4"
            android:layout_toEndOf="@+id/textView2Window4" />

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@android:id/list"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="#ffffff"
            android:layout_above="@+id/button3"
            android:layout_below="@+id/textViewWindow4" />

        <Button
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Back"
            android:id="@+id/button3"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="#ffffa900"
            android:textColor="#000000"
            android:textStyle="bold" />

    </RelativeLayout>
</LinearLayout>